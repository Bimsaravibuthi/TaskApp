@page
@model TaskApp.Pages.Account.loginModel

<div class="container border" style="padding:20px">
    <form action="/" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credantial.UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credantial.UserName" type="text" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credantial.UserName"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credantial.Password"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credantial.Password" type="password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credantial.Password"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" name="name" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
